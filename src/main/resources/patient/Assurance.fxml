<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.PatientAssuranceController">
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="page-title" text="Assurances Disponibles">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TableView fx:id="tableAssurances" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNom" prefWidth="150.0" text="Nom" />
                        <TableColumn fx:id="colCompagnie" prefWidth="150.0" text="Compagnie" />
                        <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
                        <TableColumn fx:id="colDateDebut" prefWidth="120.0" text="Date dÃ©but" />
                        <TableColumn fx:id="colDateExpiration" prefWidth="120.0" text="Date expiration" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="btnSouscrire" mnemonicParsing="false" onAction="#souscrireAssurance" styleClass="primary-button" text="Souscrire" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>