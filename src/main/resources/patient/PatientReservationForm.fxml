<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.Controllers.Patient.PatientReservationFormController" styleClass="container">

    <stylesheets>
        <URL value="@styles/assurance-styles.css" />
    </stylesheets>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Formulaire de saisie -->
    <GridPane hgap="15" vgap="15" styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
        </columnConstraints>

        <!-- Doctor -->
        <Label text="Doctor :" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="comboDoctor" promptText="Sélectionnez un Docteur" styleClass="form-field"
                  GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <!-- Subject -->
        <Label text="Sujet :" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtSubject" promptText="Sujet" styleClass="form-field"
                   GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <!-- Date Reservation -->
        <Label text="Date Reservation :" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <DatePicker fx:id="dpDate_res" promptText="JJ/MM/AAAA" styleClass="form-field"
                    GridPane.rowIndex="3" GridPane.columnIndex="1" />


    </GridPane>

    <!-- Séparateur -->
    <Separator styleClass="separator" />

    <!-- Boutons d'action -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler" styleClass="cancel-button" />
        <Button fx:id="btnSauvegarder" text="Sauvegarder" onAction="#handleSauvegarder" styleClass="save-button" />
    </HBox>
</VBox>