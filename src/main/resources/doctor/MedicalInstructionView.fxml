<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.Controllers.Doctor.MedicalInstructionListController" styleClass="container">

    <stylesheets>
        <URL value="@styles/assurance-styles.css" />
    </stylesheets>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch" promptText="Search medical instructions..." styleClass="search-field" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnSearch" text="Search" styleClass="search-button" onAction="#handleSearch"/>
        <Button fx:id="btnRefresh" text="Refresh" styleClass="refresh-button" onAction="#handleRefresh" />

        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <Button fx:id="btnAddMI" text="+ Add Instruction" styleClass="add-button" onAction="#handleAddNew"/>
        </HBox>
    </HBox>

    <TableView fx:id="miTable" VBox.vgrow="ALWAYS" styleClass="assurance-table">
        <columns>
            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
            <TableColumn fx:id="contentColumn" text="Content" prefWidth="250"/>
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="120"/>
            <TableColumn fx:id="prescriptionsColumn" text="Prescriptions" prefWidth="200"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
        <placeholder>
            <Label text="No medical instructions found" styleClass="no-data-label"/>
        </placeholder>
    </TableView>
</VBox>