<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.Controllers.Doctor.DoctorReservationController" styleClass="container">

    <stylesheets>
        <URL value="@styles/assurance-styles.css"/>
    </stylesheets>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- En-tÃªte avec recherche -->
    <HBox fx:id="header" spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch" promptText="Rechercher une Reservation..." styleClass="search-field"
                   HBox.hgrow="ALWAYS"
                   onAction="#handleSearch"/>
        <Button fx:id="btnSearch" text="Rechercher" styleClass="search-button" onAction="#handleSearch"/>
        <Button fx:id="btnRefresh" text="Actualiser" styleClass="refresh-button" onAction="#handleRefresh"/>
    </HBox>

    <!-- Contenu principal - TableView des assurances -->
    <TableView fx:id="reservationTable" VBox.vgrow="ALWAYS" styleClass="assurance-table">
        <columns>
            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="180" styleClass="table-column"/>
            <TableColumn fx:id="subjectColumn" text="Sujet" prefWidth="150" styleClass="table-column"/>
            <TableColumn fx:id="date_resColumn" text="Date" prefWidth="180" styleClass="table-column"/>
            <TableColumn fx:id="statutColumn" text="Statut" prefWidth="120" styleClass="table-column"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" styleClass="table-column-actions">
                <!-- Custom Cell Actions -->
            </TableColumn>
        </columns>
        <placeholder>
            <Label text="Aucune reservation disponible" styleClass="no-data-label"/>
        </placeholder>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>