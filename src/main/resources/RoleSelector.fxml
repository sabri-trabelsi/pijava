<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Controllers.SelectorController"
      prefHeight="400.0" prefWidth="600.0" styleClass="selector-background">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="DOC4U - Sélection du rôle" styleClass="header-label"/>
    <Label text="Choisissez votre interface" styleClass="sub-header-label"/>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="btnAdmin" text="Administrateur" onAction="#navigateToAdmin"
                styleClass="role-button"/>
        <Button fx:id="btnDoctor" text="Médecin" onAction="#navigateToDoctor"
                styleClass="role-button"/>
        <Button fx:id="btnPatient" text="Patient" onAction="#navigateToPatient"
                styleClass="role-button"/>
    </HBox>
</VBox>