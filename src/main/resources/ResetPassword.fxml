<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.ResetPasswordController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
        <Label text="Reset Password" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Email Section -->
        <Label text="Enter your email:"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <Button text="Send Verification Code" onAction="#handleSendCode"/>

        <!-- Verification Section -->
        <Label text="Verification Code:"/>
        <TextField fx:id="txtVerificationCode" promptText="Enter code from email"/>

        <!-- New Password Section -->
        <Label text="New Password:"/>
        <PasswordField fx:id="txtNewPassword" promptText="New password"/>

        <Label text="Confirm Password:"/>
        <PasswordField fx:id="txtConfirmPassword" promptText="Confirm new password"/>

        <Button text="Reset Password" onAction="#handleResetPassword"/>

        <Hyperlink text="Back to Login" onAction="#returnToLogin"/>
        <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>
    </VBox>
</AnchorPane>