<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.LoginController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100">
        <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <TextField fx:id="txtEmail" promptText="Email"/>
        <PasswordField fx:id="txtPassword" promptText="Password"/>
        <Button text="Login" onAction="#handleLogin"/>
        <Hyperlink text="Register here" onAction="#handleRegisterLink"/>
        <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>
    </VBox>
    <!-- Add this after the register hyperlink -->
    <Hyperlink text="Forgot Password?" onAction="#handleForgotPassword"/>
</AnchorPane>